 {
 	struct ima_namespace *ns;
 
+	do {
+		ns = ima_ns_from_user_ns(user_ns);
+		if (ns_is_active(ns))
+			return &ns->config;
+		user_ns = user_ns->parent;
+	} while (user_ns);
+
+	/* init_ima_ns is always active, so this cannot happen */
+	return NULL;
